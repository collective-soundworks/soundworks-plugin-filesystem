{
  "name": "@soundworks/plugin-filesystem",
  "version": "2.0.0-alpha.7",
  "description": "soundworks plugin to parse and watch directories",
  "authors": [
    "Benjamin Matuszewski"
  ],
  "license": "BSD-3-Clause",
  "type": "module",
  "exports": {
    "./client.js": {
      "module": "./src/ClientPluginFilesystem.browser.js",
      "node": "./src/ClientPluginFilesystem.node.js"
    },
    "./server.js": "./src/ServerPluginFilesystem.js"
  },
  "scripts": {
    "api": "jsdoc-to-readme --src src/*.js",
    "lint": "npx eslint src && npx eslint tests",
    "preversion": "npm run api && npm run toc && git commit -am 'docs: build' --allow-empty",
    "test": "mocha tests/*.spec.js",
    "test:only": "mocha",
    "toc": "markdown-toc -i README.md --maxdepth 3"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/collective-soundworks/soundworks-plugin-filesystem"
  },
  "bugs": {
    "url": "https://github.com/collective-soundworks/soundworks-plugin-filesystem/issues"
  },
  "homepage": "https://soundworks.dev",
  "dependencies": {
    "@ircam/sc-utils": "^1.9.0",
    "chokidar": "^4.0.3",
    "directory-tree": "^3.5.2",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.1",
    "mime-types": "^2.1.35",
    "node-fetch": "^3.3.0",
    "normalize-path": "^3.0.0"
  },
  "devDependencies": {
    "@ircam/eslint-config": "^2.0.1",
    "@soundworks/core": "^4.0.0-alpha.20",
    "@soundworks/helpers": "^1.0.0-alpha.18",
    "chai": "^5.1.2",
    "jsdoc-to-readme": "^2.0.2",
    "markdown-toc": "^1.2.0",
    "mocha": "^11.1.0",
    "puppeteer": "^24.1.1"
  }
}
